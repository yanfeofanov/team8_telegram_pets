<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="create-photo-table.1" author="DMorozov">

        <preConditions>
            <not>
                <tableExists tableName="photo"/>
            </not>
        </preConditions>

        <createTable tableName="photo">
            <column name="id" autoIncrement="true" type="BIGSERIAL">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="pet_id" type="INT"/>
            <column name="date" type="TIMESTAMP"/>
            <column name="report_id" type="INT8"/>
            <column name="filePath" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="mediaType" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="fileSize" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="data" type="OID"/>
        </createTable>
    </changeSet>
</databaseChangeLog>